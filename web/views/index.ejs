<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">Yahoo Fantasy 工具</a>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header">
            <h2>游戏列表</h2>
          </div>
          <div class="card-body">
            <% if (games && games.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>名称</th>
                      <th>代码</th>
                      <th>季节</th>
                      <th>类型</th>
                      <th>操作</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% games.forEach(game => { %>
                      <tr>
                        <td><%= game.id %></td>
                        <td><%= game.name %></td>
                        <td><%= game.code %></td>
                        <td><%= game.season %></td>
                        <td><%= game.type %></td>
                        <td>
                          <a href="/games/<%= game.id %>" class="btn btn-sm btn-primary">查看详情</a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted">没有找到游戏数据。</p>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header">
            <h2>用户信息</h2>
          </div>
          <div class="card-body">
            <% if (users && users.length > 0) { %>
              <% const user = users[0]; %>
              <div class="user-info">
                <h4><%= user.nickname || '未设置昵称' %></h4>
                <p>GUID: <%= user.yahoo_guid %></p>
                <% if (user.email) { %>
                  <p>邮箱: <%= user.email %></p>
                <% } %>
              </div>
            <% } else { %>
              <p class="text-muted">没有找到用户数据。</p>
            <% } %>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h2>操作</h2>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              <a href="/api/games" class="btn btn-outline-primary" target="_blank">游戏 API</a>
              <a href="/api/leagues" class="btn btn-outline-primary" target="_blank">联盟 API</a>
              <a href="/api/teams" class="btn btn-outline-primary" target="_blank">队伍 API</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg-light py-3 mt-5">
    <div class="container">
      <p class="text-center text-muted">Yahoo Fantasy 工具 &copy; <%= new Date().getFullYear() %></p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 