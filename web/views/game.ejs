<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">Yahoo Fantasy 工具</a>
    </div>
  </nav>

  <div class="container mt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">首页</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= game.name %> <%= game.season %></li>
      </ol>
    </nav>

    <div class="row">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header">
            <h2><%= game.name %> <%= game.season %></h2>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <p><strong>游戏键:</strong> <%= game.game_key %></p>
                <p><strong>游戏ID:</strong> <%= game.game_id %></p>
                <p><strong>代码:</strong> <%= game.code %></p>
              </div>
              <div class="col-md-6">
                <p><strong>类型:</strong> <%= game.type %></p>
                <p><strong>URL:</strong> <a href="<%= game.url %>" target="_blank"><%= game.url %></a></p>
                <p><strong>季节:</strong> <%= game.season %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h3>关联联盟</h3>
          </div>
          <div class="card-body">
            <% if (game.leagues && game.leagues.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>联盟键</th>
                      <th>名称</th>
                      <th>队伍数</th>
                      <th>操作</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% game.leagues.forEach(league => { %>
                      <tr>
                        <td><%= league.id %></td>
                        <td><%= league.league_key %></td>
                        <td><%= league.name || '未命名' %></td>
                        <td><%= league.num_teams %></td>
                        <td>
                          <a href="/leagues/<%= league.id %>" class="btn btn-sm btn-primary">查看详情</a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted">此游戏没有关联的联盟数据。</p>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header">
            <h3>操作</h3>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              <a href="<%= game.url %>" class="btn btn-outline-primary" target="_blank">访问官方页面</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg-light py-3 mt-5">
    <div class="container">
      <p class="text-center text-muted">Yahoo Fantasy 工具 &copy; <%= new Date().getFullYear() %></p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 