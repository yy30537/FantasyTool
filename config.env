# Yahoo Fantasy ETL 环境配置文件
# =================================

# PostgreSQL 数据库配置
# 根据你的PostgreSQL安装配置以下参数

# 数据库连接信息
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fantasy_db
DB_USER=fantasy_user
DB_PASSWORD=fantasyPassword

# Yahoo Fantasy API 配置 (从 main.py 或 auth 层获取)
YAHOO_CLIENT_ID=your_client_id_here
YAHOO_CLIENT_SECRET=your_client_secret_here

# ETL 系统配置
# 默认批量大小
BATCH_SIZE=1000

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 数据库连接池配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# 测试模式配置
TEST_MODE=false
TEST_DB_NAME=fantasy_test_db

# 使用说明:
# 1. 复制此文件为 .env: cp config.env .env
# 2. 修改上述配置值以匹配你的环境
# 3. 确保PostgreSQL服务正在运行
# 4. 确保数据库和用户已创建 (参考 PostgreSQL_Setup_Guide.md) 